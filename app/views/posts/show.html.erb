<%= javascript_include_tag 'comment.js','lytebox.js'%>
<%= stylesheet_link_tag 'lytebox.css' %>
<%=label_tag :Subject%>
<%=h @post.subject%><Br/>
<%=label_tag :Country%>
<%=@post.area.name%><br/>
<%unless @post.pictures.blank?%>
<%=label_tag :Pictures%><br/>
<%@post.pictures.each do |pic|%>
<%=label_tag :Title,'Title:  '%><%=pic.description%><%=link_to (image_tag pic.image.url(:thumb)),pic.image.url(:medium),:rel=>"lyteshow[vacation]"%><br/>
<%end%>
<%end%>
<%unless @post.links%>
<%=label_tag :Links%><br/>
<%@post.links.each do |link|%>
<%=link_to link.description.blank? ? link.url : link.description,link.url%><br/>
<%end%>
<%end%>
<br/>
<%=render :partial => 'comments',:locals => {:post => @post}%>
<%=render :partial => 'comment_form',:locals => {:post => @post}%>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
